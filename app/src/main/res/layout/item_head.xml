<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="300dp"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/item_head_bg"
    android:gravity="center"
    android:padding="10dp">


    <com.huaan.doorbar.widget.RoundImageView
        android:id="@+id/iv_item_head_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        res:border_inside_color="#808080"
        res:border_outside_color="#000"
        res:border_thickness="2dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_item_name"
        android:layout_width="200dp"
        android:layout_below="@id/iv_item_head_img"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

</RelativeLayout>
